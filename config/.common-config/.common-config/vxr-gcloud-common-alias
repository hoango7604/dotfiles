# kubernetes quick commands
alias k=kubectl
alias kgp="kubectl get pods"
alias kgpg="kubectl get pods | grep "
alias kgs="kubectl get services"
alias kgsg="kubectl get services | grep "
alias kgd="kubectl get deployment"
alias kgi="kubectl get ingress"
alias kdp="kubectl describe pod"
alias kds="kubectl describe service"
alias klg="kubectl logs"
alias klt="kubectl logs -f"
alias kld="kubectl logs deployment/$1"
alias kssh="kubectl exec -it"
alias kpf="kubectl port-forward"
alias kpl="kubectl get svc --all-namespaces -o go-template='{{range .items}}{{range.spec.ports}}{{if .nodePort}}{{.nodePort}}{{\"\n\"}}{{end}}{{end}}{{end}}'"

# gcloud quick command
alias gc="gcloud"
alias gccpl="gcloud compute instances list"
alias gcssh="gcloud compute ssh $1 --internal-ip"
